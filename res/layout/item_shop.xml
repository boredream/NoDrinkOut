<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:layout_below="@id/iv_image"
    android:padding="16dp" >

    <TextView
        android:id="@+id/tv_subhead"
        style="@style/TextViewSubhead"
        android:layout_alignParentLeft="true"
        android:singleLine="true"
        android:layout_toLeftOf="@+id/ll_collect"
        android:layout_marginRight="16dp"
        android:text="油坊桥吴彦祖咖啡店" />

    <TextView
        android:id="@+id/tv_body"
        style="@style/TextViewBody"
        android:layout_alignParentBottom="true"
        android:singleLine="true"
        android:text="油坊桥油坊桥油坊桥  |  100m"
        android:textColor="@color/txt_gray_alpha" />

    <LinearLayout
        android:id="@+id/ll_collect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_subhead"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_collect"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_favorite"
            android:tint="@color/red" />

        <TextView
            android:id="@+id/tv_collect"
            style="@style/TextViewCaption"
            android:layout_marginLeft="8dp"
            android:text="0" />
    </LinearLayout>

</RelativeLayout>