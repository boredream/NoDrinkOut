<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.boredream.nodrinkout"
    android:id="@+id/ll_card_content"
    android:layout_width="match_parent"
    android:layout_height="224dp"
    android:background="@drawable/card_selector"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="match_parent"
        android:layout_height="224dp"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_below="@id/iv_image"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@drawable/gra"
        android:padding="16dp" >

        <TextView
            android:id="@+id/tv_subhead"
            style="@style/TextViewSubhead"
            android:shadowColor="@color/black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text="油坊桥吴彦祖咖啡店"
            android:textColor="@color/txt_white" />

        <TextView
            android:id="@+id/tv_body"
            style="@style/TextViewBody"
            android:layout_alignParentBottom="true"
            android:text="100m"
            android:textColor="@color/txt_white" />

        <com.boredream.nodrinkout.view.DrawableTextView
            android:id="@+id/tv_like"
            style="@style/TextViewBody"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/ic_launcher"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="点赞"
            android:textColor="@color/txt_white"
            app:drawableHeight="24dp"
            app:drawableWidth="24dp" />
    </RelativeLayout>

</RelativeLayout>