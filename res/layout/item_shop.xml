<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="12dp" >

        <TextView
            android:id="@+id/tv_subhead"
            style="@style/TextViewSubhead"
            android:layout_marginRight="16dp"
            android:singleLine="true"
            android:text="油坊桥吴彦祖咖啡店" />

        <TextView
            android:id="@+id/tv_body"
            android:layout_marginTop="4dp"
            style="@style/TextViewBody"
            android:singleLine="true"
            android:text="油坊桥油坊桥油坊桥  |  100m"
            android:textColor="@color/txt_gray_alpha" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_shop_right"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp" >

        <ImageView
            android:id="@+id/iv_shop_right"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_favorite" />

        <TextView
            android:id="@+id/tv_shop_right"
            style="@style/TextViewCaption"
            android:layout_marginLeft="8dp"
            android:text="0" />
    </LinearLayout>

</LinearLayout>