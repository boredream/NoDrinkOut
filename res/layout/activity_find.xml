<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#f8f8f8"
    >

    <include layout="@layout/include_titlebar" />

    <EditText
        android:id="@+id/ed_search"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_margin="5dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_gray_find_edit"
        android:cursorVisible="false"
        android:gravity="center"
        android:hint="搜一搜你喜欢的"
        android:maxLength="20"
        android:paddingLeft="32dp"
        android:singleLine="true"
        android:textSize="14sp" >
    </EditText>

    <ImageView 
        android:id="@+id/img_find_tuijian"
        android:layout_width="match_parent" 
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ji"
        />
	<LinearLayout
	    android:id="@+id/lay_discount"
	    android:layout_width="match_parent"
	    android:layout_height="48dp"
	    android:orientation="horizontal"
		android:layout_marginTop="10dp"
		android:background="@drawable/bg_white2gray_selector"
		    >
	  <ImageView 
	      android:layout_width="24dp"
	      android:layout_height="24dp"
	      android:src="@drawable/bigger"
	      android:layout_gravity="center"
	      android:layout_marginLeft="16dp"
	      />  
	   <TextView 
	       android:text="有优惠，在等什么"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	       android:layout_gravity="center"
	       android:textSize="16sp"
	       android:layout_marginLeft="32dp"
	       android:textColor="@color/coffee"
	       /> 
	    
	</LinearLayout>
	<View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@color/coffee_light" />
	<LinearLayout
	    android:id="@+id/lay_newshop"
	    android:layout_width="match_parent"
	    android:layout_height="48dp"
	    android:orientation="horizontal"
	    android:background="@drawable/bg_white2gray_selector"
		    >
	  <ImageView 
	      android:layout_width="24dp"
	      android:layout_height="24dp"
	      android:src="@drawable/bigger"
	      android:layout_gravity="center"
	      android:layout_marginLeft="16dp"
	      />  
	   <TextView 
	       android:text="新店开张"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	       android:layout_gravity="center"
	       android:textSize="16sp"
	       android:layout_marginLeft="32dp"
	       android:textColor="@color/coffee"
	       /> 
	    
	</LinearLayout>
		<LinearLayout
	    android:id="@+id/lay_xiaomenghelp"
	    android:layout_width="match_parent"
	    android:layout_height="48dp"
	    android:orientation="horizontal"
		android:layout_marginTop="10dp"
		android:background="@drawable/bg_white2gray_selector"
		    >
	  <ImageView 
	      android:layout_width="24dp"
	      android:layout_height="24dp"
	      android:src="@drawable/bigger"
	      android:layout_gravity="center"
	      android:layout_marginLeft="16dp"
	      />  
	   <TextView 
	       android:text="小梦帮倒忙"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	       android:layout_gravity="center"
	       android:textSize="16sp"
	       android:layout_marginLeft="32dp"
	       android:textColor="@color/coffee"
	       /> 
  
	</LinearLayout>
		 	<View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@color/coffee_light" /> 
		<LinearLayout
	    android:id="@+id/lay_daka"
	    android:layout_width="match_parent"
	    android:layout_height="48dp"
	    android:orientation="horizontal"
	    android:background="@drawable/bg_white2gray_selector"
		    >
	  <ImageView 
	      android:layout_width="24dp"
	      android:layout_height="24dp"
	      android:src="@drawable/bigger"
	      android:layout_gravity="center"
	      android:layout_marginLeft="16dp"
	      />  
	   <TextView 
	       android:text="今天打卡了吗"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	       android:layout_gravity="center"
	       android:textSize="16sp"
	       android:layout_marginLeft="32dp"
	       android:textColor="@color/coffee"
	       /> 
	    
	</LinearLayout>
		<LinearLayout
	    android:id="@+id/lay_zhoubian"
	    android:layout_width="match_parent"
	    android:layout_height="48dp"
	    android:orientation="horizontal"
		android:layout_marginTop="10dp"
		android:background="@drawable/bg_white2gray_selector"
		    >
	  <ImageView 
	      android:layout_width="24dp"
	      android:layout_height="24dp"
	      android:src="@drawable/bigger"
	      android:layout_gravity="center"
	      android:layout_marginLeft="16dp"
	      />  
	   <TextView 
	       android:text="逼格最高的周边"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	       android:layout_gravity="center"
	       android:textSize="16sp"
	       android:layout_marginLeft="32dp"
	       android:textColor="@color/coffee"
	       /> 
	    
	</LinearLayout>
</LinearLayout>