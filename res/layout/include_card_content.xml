<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.boredream.nodrinkout"
    android:layout_width="match_parent"
    android:id="@+id/ll_card_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <include layout="@layout/item_two_line_image" />

    <FrameLayout
        android:id="@+id/fl_imageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.boredream.nodrinkout.view.WrapHeightGridView
            android:id="@+id/gv_images"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:horizontalSpacing="4dp"
            android:numColumns="4"
            android:padding="8dp"
            android:stretchMode="columnWidth"
            android:verticalSpacing="4dp" />

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:visibility="gone" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_content"
        style="@style/TextViewBody"
        android:layout_width="match_parent"
        android:padding="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_location"
            style="@style/ImageViewIcon16"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/tv_location"
            style="@style/TextViewBody"
            android:layout_marginLeft="16dp"
            android:singleLine="true"
            android:text="XXX咖啡店" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <com.boredream.nodrinkout.view.DrawableTextView
            android:id="@+id/tv_comment"
            style="@style/TextViewBody"
            android:drawableLeft="@drawable/ic_launcher"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:text="评论"
            app:drawableHeight="24dp"
            app:drawableWidth="24dp" />

        <com.boredream.nodrinkout.view.DrawableTextView
            android:id="@+id/tv_like"
            style="@style/TextViewBody"
            android:drawableLeft="@drawable/ic_launcher"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:text="点赞"
            app:drawableHeight="24dp"
            app:drawableWidth="24dp" />
    </LinearLayout>

</LinearLayout>