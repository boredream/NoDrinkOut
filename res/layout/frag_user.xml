<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_light_gray_alpha"
    android:orientation="vertical" >

    <include layout="@layout/include_titlebar" />

    <LinearLayout
        android:id="@+id/ll_userinfo"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_white2gray_selector"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:padding="16dp" >

            <TextView
                android:id="@+id/tv_name"
                style="@style/TextViewSubhead"
                android:text="吴彦祖" />

            <TextView
                android:id="@+id/tv_intro"
                style="@style/TextViewBody"
                android:layout_alignParentBottom="true"
                android:text="没错,我就是油坊桥吴彦祖"
                android:textColor="@color/txt_gray_alpha" />
        </RelativeLayout>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_arrow_right_grey" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ll_about_us"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_white2gray_selector"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_launcher" />

            <TextView
                style="@style/TextViewSubhead"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:text="关于我们" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_arrow_right_grey" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_black_alpha" />

        <LinearLayout
            android:id="@+id/ll_check_update"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_white2gray_selector"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_launcher" />

            <TextView
                style="@style/TextViewSubhead"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="检查更新" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_arrow_right_grey" />
        </LinearLayout>
    </LinearLayout>

    <Button
        style="@style/ButtonPrimaryColor"
        android:layout_width="match_parent"
        android:layout_margin="16dp"
        android:text="退出登录" />

</LinearLayout>