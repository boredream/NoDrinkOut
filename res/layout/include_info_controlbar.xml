<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_bottom_control"
    android:baselineAligned="false"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/ll_share_bottom"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/shape_rect_grey_selector"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_share_bottom"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_share" />

        <TextView
            android:id="@+id/tv_share_bottom"
            style="@style/TextViewBody"
            android:layout_marginLeft="8dp"
            android:text="分享"
            android:textColor="@color/txt_gray_alpha" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_comment_bottom"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/shape_rect_grey_selector"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_comment_bottom"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_comment" />

        <TextView
            android:id="@+id/tv_comment_bottom"
            style="@style/TextViewBody"
            android:layout_marginLeft="8dp"
            android:text="评论"
            android:textColor="@color/txt_gray_alpha" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_like_bottom"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="-1px"
        android:layout_weight="1"
        android:background="@drawable/shape_rect_grey_selector"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_like_bottom"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_thumb_up" />

        <TextView
            android:id="@+id/tv_like_bottom"
            style="@style/TextViewBody"
            android:layout_marginLeft="8dp"
            android:text="点赞"
            android:textColor="@color/txt_gray_alpha" />
    </LinearLayout>

</LinearLayout>